<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="catchBinding"
            type="no.hiof.geofishing.data.entities.Catch" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.views.UpdateCatchFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintUpdateCatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/field_fishing_lure_update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint='@{TextUtils.isEmpty(catchBinding.lure) ? "Fishing lure (optional)" : catchBinding.lure}'
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_fishing_rod_update" />

                <EditText
                    android:id="@+id/field_fishing_rod_update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint='@{TextUtils.isEmpty(catchBinding.rod) ? "Fishing rod (optional)" : catchBinding.rod}'
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_preview_update" />

                <EditText
                    android:id="@+id/field_description_update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint='@{TextUtils.isEmpty(catchBinding.description) ? "Description" : catchBinding.description}'
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_title_update" />

                <EditText
                    android:id="@+id/field_title_update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint='@{TextUtils.isEmpty(catchBinding.title) ? "Title" : catchBinding.title}'
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:text=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinner_species_update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:minHeight="48dp"
                    android:value="@{}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_description_update"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/field_weight_update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:width="180dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint='@{TextUtils.isEmpty(catchBinding.weight.toString()) ? "Weight (g)" : "Weight: " + catchBinding.weight.toString() + " g"}'
                    android:inputType="number"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toStartOf="@+id/field_length_update"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_species_update" />

                <EditText
                    android:id="@+id/field_length_update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:width="180dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint='@{TextUtils.isEmpty(catchBinding.length.toString()) ? "Length (g)" : "Length: " + catchBinding.length.toString() + " cm"}'
                    android:inputType="number"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/field_weight_update"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_species_update" />

                <Button
                    android:id="@+id/button_take_picture_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Take new picture"
                    app:layout_constraintEnd_toStartOf="@+id/button_update_picture"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_weight_update" />

                <Button
                    android:id="@+id/button_update_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Add new picture"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/button_take_picture_update"
                    app:layout_constraintTop_toBottomOf="@+id/field_length_update" />

                <Button
                    android:id="@+id/button_update_catch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="Update catch"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_fishing_lure_update" />

                <ImageView
                    android:id="@+id/image_preview_update"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:src='@{catchBinding.picture}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_take_picture_update" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>