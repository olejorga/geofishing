<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/menu_maps_fragment"
        android:name="no.hiof.geofishing.views.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/menu_catch_fragment"
        android:name="no.hiof.geofishing.views.CatchFragment"
        android:label="fragment_catch"
        tools:layout="@layout/fragment_catch" />
    <fragment
        android:id="@+id/menu_rank_fragment"
        android:name="no.hiof.geofishing.views.RankFragment"
        android:label="fragment_rank"
        tools:layout="@layout/fragment_rank" />
    <navigation android:id="@+id/menu_userPage_fragment"
        app:startDestination="@id/userPageFragment">
        <fragment
            android:id="@+id/userPageFragment"
            android:name="no.hiof.geofishing.views.UserPageFragment"
            android:label="fragment_user_page"
            tools:layout="@layout/fragment_user_page">
            <action
                android:id="@+id/action_userPageFragment_to_settingsFragment"
                app:destination="@id/settingsFragment" />
        </fragment>
        <fragment
            android:id="@+id/settingsFragment"
            android:name="no.hiof.geofishing.views.SettingsFragment"
            android:label="fragment_settings"
            tools:layout="@layout/fragment_settings" />
    </navigation>
    <navigation android:id="@+id/menu_feed_fragment"
        app:startDestination="@id/feedFragment">
        <fragment
            android:id="@+id/feedFragment"
            android:name="no.hiof.geofishing.views.FeedFragment"
            android:label="fragment_feed"
            tools:layout="@layout/fragment_feed">
            <action
                android:id="@+id/action_feedFragment_to_feedPostDetailFragment"
                app:destination="@id/feedPostDetailFragment" />
        </fragment>
        <fragment
            android:id="@+id/feedPostDetailFragment"
            android:name="no.hiof.geofishing.views.FeedPostDetailFragment"
            android:label="fragment_feed_post_detail"
            tools:layout="@layout/fragment_feed_post_detail">
            <argument
                android:name="uid"
                android:defaultValue="1"
                app:argType="integer" />
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/loginFragment"
        android:name="no.hiof.geofishing.views.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mapsFragment"
            app:destination="@id/menu_maps_fragment" />
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="no.hiof.geofishing.views.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signupFragment_to_mapsFragment"
            app:destination="@id/menu_maps_fragment" />
    </fragment>
</navigation>